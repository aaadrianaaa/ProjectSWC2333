import javax.swing.*;

public class GardeniaManagementSystem {
    private JFrame mainFrame; // Main application window

    public GardeniaManagementSystem() {
        // Initialize the main frame
        mainFrame = new JFrame("Gardenia Management System");
        mainFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        mainFrame.setSize(500, 500); // Set the size of the window

        // Set the content pane to the welcome page
        mainFrame.setContentPane(new WelcomePage(mainFrame).getPanel());
        mainFrame.setVisible(true); // Make the window visible
    }

    public static void main(String[] args) {
        new FrontPageCoding();
    }
}
